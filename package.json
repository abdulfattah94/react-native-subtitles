{
  "name": "react-native-subtitles",
  "version": "5.0.0",
  "description": "Add subtitles to any video given a current timestamp",
  "repository": "nriccar/react-native-subtitles",
  "main": "index.js",
  "keywords": [
    "react-native",
    "subtitles",
    "react-native-video",
    "nriccar"
  ],
  "scripts": {
    "npmPublish": "npm version major && npm publish",
    "lint": "eslint \"src/**/*.+(js|jsx|json|ts|tsx|md)\"",
    "prettier": "prettier \"src/**/*.+(js|jsx|json|ts|tsx|md)\"",
    "format": "npm run prettier -- --write",
    "validate": "npm run lint && npm run format",
    "git:commit": "func() { git add . && git commit -m \"[main] - $1\"; }; func",
    "git:push": "func() { git push; }; func",
    "deploy": "npm run validate && npm run git:commit && npm version patch && npm publish && npm run git:push"
  },
  "dependencies": {
    "axios": "^0.21.4",
    "srt-parser-2": "^1.1.3",
    "vtt-to-json": "^0.1.1"
  },
  "devDependencies": {
    "babel-eslint": "^9.0.0",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^1.14.2"
  }
}
